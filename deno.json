{
  "imports": {
    "react": "npm:react@18.3.1",
    "react-dom": "npm:react-dom@18.3.1"
  },
  "lint": {
    "include": ["esbuild.ts", "deno.json", "assets/", "src/", "tests/"]
  },
  "fmt": {
    "include": ["esbuild.ts", "deno.json", "assets/", "src/", "tests/"]
  },
  "tasks": {
    "build": "deno task init && deno run -A esbuild.ts build",
    "init": "deno cache src/index.jsx --reload --lock-write"
  },
  "exclude": ["dist/"],
  "nodeModulesDir": true
}
